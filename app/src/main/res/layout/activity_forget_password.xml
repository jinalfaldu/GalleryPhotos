<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_forget_password_main"
    android:background="@drawable/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/native_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/native_containerBanner"
            android:layout_below="@+id/native_container">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/grey"
                    android:gravity="center_horizontal"
                    android:id="@+id/txt_desc"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:text="Please Remember this security question and answer. In case you forgot your password that time it will be help to reset your password."
                    android:lineSpacingExtra="@dimen/_3sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:layout_below="@+id/txt_desc">

                    <RelativeLayout
                        android:id="@+id/rl_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_6sdp">

                                <TextView
                                    android:textSize="@dimen/_13sdp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="Security Question : "
                                    android:fontFamily="@font/poppins_medium"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/img_1"
                                    android:layout_centerVertical="true"
                                     />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_6sdp">

                                <EditText
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:id="@+id/edit_security_question"
                                    android:background="@drawable/light_box"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:focusableInTouchMode="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_36sdp"
                                    android:lines="1"
                                    android:singleLine="true"
                                     />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_6sdp">

                                <TextView
                                    android:textSize="@dimen/_13sdp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="Enter Security Answer : "
                                    android:maxLines="1"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/poppins_medium"
                                    android:singleLine="true"
                                    android:layout_toRightOf="@+id/img_2"
                                    android:layout_centerVertical="true"
                                     />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_12sdp">

                                <EditText
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textColorHint="?android:attr/textColorSecondary"
                                    android:id="@+id/edit_security_answer"
                                    android:background="@drawable/light_box"
                                    android:fontFamily="@font/poppins_regular"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_36sdp"
                                    android:hint="Answer"
                                    android:cursorVisible="true"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:imeOptions="actionDone" />
                            </RelativeLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp">

                                <TextView

                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Enter Security Email:" />

                                <EditText
                                    android:textSize="@dimen/_12sdp"
                                    android:id="@+id/editEmail"
                                    android:background="@drawable/bg_round_corner"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:hint="Enter Your Email"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:inputType="textEmailAddress" />

                                <TextView
                                    android:textSize="@dimen/_9sdp"
                                    android:paddingLeft="@dimen/_3sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:text="@string/email_forget_hint" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_snap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_below="@+id/rl_screen">

                        <TextView
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hard to Remember ?"
                            android:fontFamily="@font/poppins_medium"
                            android:maxLines="1"
                            android:singleLine="true"
                             />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/grey"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Save this image in your safe place."
                            android:maxLines="1"
                            android:singleLine="true"
                            android:lineSpacingExtra="@dimen/_3sdp" />

                        <ImageView
                            android:id="@+id/img_Snap"
                            android:background="@drawable/snap_box"
                            android:padding="@dimen/_10sdp"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:src="@drawable/capture" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:layout_below="@+id/ll_snap">

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btnSubmitForgetPassword"
                            android:background="@drawable/btn_bg"
                            android:paddingLeft="@dimen/_45sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingRight="@dimen/_45sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:text="Submit"
                            android:fontFamily="@font/poppins_medium"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/native_containerBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>
