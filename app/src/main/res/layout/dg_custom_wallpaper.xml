<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bottomsheetbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:textSize="@dimen/_18sdp"

                android:textColor="@color/black"
                android:id="@+id/txtTitle"
                android:paddingLeft="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Image As"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular" />

            <ImageView
                android:id="@+id/rlCancel"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/btn_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_below="@+id/rl_top">

            <RelativeLayout
                android:id="@+id/rlSetHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/wall_home" />

                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/bottomsheettextcolor"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="Home Screen"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSetLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/wall_lock" />

                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/bottomsheettextcolor"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="Lock Screen"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSetBoth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/wall_both" />

                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/bottomsheettextcolor"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="Home &amp; Lock Screen"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/txtSetHome"
            android:background="@drawable/gradientbtn"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Home Screen"
            android:layout_weight="1"
            android:layout_below="@+id/rl_top"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/txtSetLock"
            android:background="@drawable/gradientbtn"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Lock Screen"
            android:layout_weight="1"
            android:layout_below="@+id/txtSetHome"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/txtSetBoth"
            android:background="@drawable/gradientbtn"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Home &amp; Lock Screen"
            android:layout_weight="1"
            android:layout_below="@+id/txtSetLock"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins_regular" />
    </RelativeLayout>
</RelativeLayout>
