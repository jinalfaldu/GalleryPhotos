<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:background="@drawable/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:background="@drawable/halftop"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:background="?attr/actionBarItemBackground"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/img_back_white"
                    android:layout_centerVertical="true" />

                <TextView
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/textView_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:text="Create Collage"
                    android:lines="1"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/collage_btn"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/btn_collage"
            android:layout_below="@+id/rl_header" />

        <ImageView
            android:id="@+id/single_editor_btn"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/btn_collage"
            android:layout_below="@+id/collage_btn" />

        <ImageView
            android:id="@+id/mirror_btn"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/btn_mirror"
            android:layout_below="@+id/single_editor_btn" />

        <ImageView
            android:id="@+id/scrapbok_btn"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/btn_scrapbook"
            android:layout_below="@+id/mirror_btn" />

        <ImageView
            android:id="@+id/camera_btn"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/btn_scrapbook"
            android:layout_below="@+id/scrapbok_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/gallery_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
