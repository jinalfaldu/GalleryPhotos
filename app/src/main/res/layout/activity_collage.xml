                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onZoomOut"
                        android:src="@drawable/collage_context_zoom_out"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_move_left"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onLeftMove"
                        android:src="@drawable/collage_context_move_left"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_move_right"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onRightMove"
                        android:src="@drawable/collage_context_move_right"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_move_up"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onUpMove"
                        android:src="@drawable/collage_context_move_up"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_move_down"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:onClick="onDownMove"
                        android:src="@drawable/collage_context_move_down"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_swap"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:onClick="onSwap"
                        android:src="@drawable/collage_context_swap"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_delete"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onDelete"
                        android:src="@drawable/collage_context_delete_icon"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_center"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:onClick="onFill"
                        android:src="@drawable/collage_context_fill"
                        android:tint="@color/white" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/select_image_swap"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignTop="@+id/collage_footer"
                android:layout_alignBottom="@+id/collage_footer"
                android:background="@drawable/selectgridbg"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Select another grid to swap!"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/selectgridclosebg">

                    <ImageView
                        android:id="@+id/hide_select_image_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:onClick="onSelectWarningLayout"
                        android:padding="18dp"
                        android:src="@drawable/ic_close_app"
                        app:tint="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_image_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/collage_footer"
                android:layout_alignBottom="@+id/collage_footer"
                android:background="@drawable/selectgridbg"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/select_image_filter_text"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Select a image to edit."
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/selectgridclosebg">

                    <ImageView
                        android:id="@+id/hide_select_image_warning_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:onClick="onSelectWarningLayoutFilter"
                        android:padding="18dp"
                        android:src="@drawable/ic_close_app"
                        app:tint="@color/white" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/small80_native" />

    </RelativeLayout>
</RelativeLayout>
