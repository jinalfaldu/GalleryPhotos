                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio21"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="2:1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button12"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio12"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="1:2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button32"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio32"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="3:2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button23"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio23"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="2:3"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button43"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio43"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="4:3"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button34"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio34"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="3:4"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button45"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio45"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="4:5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button57"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio57"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="5:7"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button169"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio169"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="16:9"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/button916"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:onClick="onRatio916"
                                android:padding="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="9:16"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/seekbar_blur_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:text="Blur" />

                        <SeekBar
                            android:id="@+id/seekbar_collage_blur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="56"
                            android:progressDrawable="@drawable/progress_main"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible" />
                </hdphoto.galleryimages.gelleryalbum.Images_android.Ibex_CollageModule.Cashier_MirrorUtils.Musician_MyViewFlipper>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/collage_effect_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true">

            <HorizontalScrollView
                android:id="@+id/collage_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_f5"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/collage_footer_inner_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_collage_sticker"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onStickers"
                        android:src="@drawable/cllg_stickers_unselect"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/button_collage_blur"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onBlur"
                        android:src="@drawable/cllg_blur_unselect"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/button_collage_background"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onBackground"
                        android:src="@drawable/cllg_backgroung_unselect"
                        android:tint="@color/white"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/button_mirror_sticker"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cllg_stickers_unselect"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/button_collage_adj"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:onClick="onFilterMain"
                        android:src="@drawable/cllg_filter_unselect"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/button_collage_layout"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:onClick="onCollageLayout"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/cllg_layout_unselect" />

                    <ImageView
                        android:id="@+id/button_collage_space"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onSpace"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/cllg_space_unselect" />

                    <ImageView
                        android:id="@+id/button_collage_ratio"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRatio"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/cllg_ratio_unselect" />

                    <ImageView
                        android:id="@+id/button_text"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onText"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/cllg_text_unselect" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/collage_context_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="#8b45e9"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/collage_context_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_collage_context_fit"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onInside"
                        android:src="@drawable/collage_context_inside"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_filter"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onFilter"
                        android:src="@drawable/collage_context_effect"
                        android:tint="@color/white" />

                    <ImageView
                        android:id="@+id/button_collage_context_rotate_left"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:onClick="onLeftRotate"
