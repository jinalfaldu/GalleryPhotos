<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewSwitcher
            android:id="@+id/viewswitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <hdphoto.galleryimages.gelleryalbum.Images_android.Ibex_CollageModule.Cashier_MirrorUtils.Musician_MyViewFlipper
                    android:gravity="bottom"
                    android:id="@+id/control_container"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="bottom"
                        android:id="@+id/filter_RecyclerView"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="bottom"
                        android:id="@+id/border_RecyclerView"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="bottom"
                        android:id="@+id/overlay_RecyclerView"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="bottom"
                        android:id="@+id/texture_RecyclerView"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/seekbar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp">

                        <TextView
                            android:textColor="@color/yellow_theme"
                            android:ellipsize="end"
                            android:id="@+id/seekbar_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true" />

                        <hdphoto.galleryimages.gelleryalbum.Images_android.Ibex_CollageModule.Collards_LibCommon.Collards_SeekBarHint
                            android:id="@+id/seek_bar_adjustment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="-8dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress_main"
                            android:thumb="@drawable/progress_thumb" />
                    </LinearLayout>

                    <View
                        android:id="@+id/lyrebird_lib_flipper_void"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </hdphoto.galleryimages.gelleryalbum.Images_android.Ibex_CollageModule.Cashier_MirrorUtils.Musician_MyViewFlipper>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/button_lib_cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/cancel"
                        android:text="Cancel"
                        android:singleLine="true"
                        android:layout_weight="1"
                         />

                    <ImageView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/button_lib_ok"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/apply"
                        android:text="Apply"
                        android:singleLine="true"
                        android:layout_weight="1"
                         />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/button_fx"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_fx"
                        android:tint="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/button_frame"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_frame"
                        android:tint="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/button_light"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_light"
                        android:tint="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/button_texture"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_texture"
                        android:tint="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/button_blur"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_blur"
                        android:tint="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/button_filter_reset"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/effect_reset"
                        android:tint="@color/white"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </ViewSwitcher>
    </LinearLayout>
</RelativeLayout>
